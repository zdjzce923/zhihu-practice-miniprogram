<scroll-view scroll-y="true" class="container" enable-flex="true" bindscrolltoupper="upper" upper-threshold="10"
    lower-threshold="5" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <view class="search flex-wrp">
        <!-- add bintap -->
        <view class="search-left flex-item" bindtap="">
            <image src="../../images/search.png"></image>
            <input placeholder="搜索话题, 问题或人" placeholder-class="search-placeholder" />
        </view>
        <!-- add bintap -->
        <view class="search-right flex-item" bindtap="">
            <image src="../../images/lighting.png"></image>
        </view>
    </view>

    <block wx:for="{{feed}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}" wx:key="question_id">
        <view class="feed-item">
            <view class="feed-source">
                <a class="">
                    <view class="avatar">
                        <image src="{{item.feed_source_img}}"></image>
                    </view>
                    <text>{{item.feed_source_name}}{{item.feed_source_txt}}</text>
                </a>
            </view>
            <!-- add bintap -->
            <view class="feed-content" bindtap="">
                <view class="question" qid="{{question_id}}">
                    <a class="question-link">
                        <text>{{item.question}}</text>
                    </a>
                </view>
                <view class="answer-body">
                    <!-- add bintap -->
                    <view bindtap="">
                        <text class="answer-txt" aid="{{answer_id}}">
                            {{item.answer_ctnt}}
                        </text>
                    </view>
                    <!-- add bintap -->
                    <view class="answer-actions" bindtap="bindItemTap">
                        <view class="like dot">
                            <a>{{item.good_num}} 赞同 </a>
                        </view>
                        <view class="comments dot">
                            <a>{{item.comment_num}} 评论 </a>
                        </view>
                        <view class="follow-it">
                            <a>关注问题</a>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
</scroll-view>